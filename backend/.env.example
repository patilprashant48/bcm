# Backend Environment Variables

# Server
PORT=5000
NODE_ENV=development

# MongoDB Atlas Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/bcm-platform?retryWrites=true&w=majority

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Platform Settings
ADMIN_COMMISSION_PERCENT=2

# Email Configuration (Optional - can use Supabase email)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads

# Frontend URLs (for CORS)
ADMIN_WEB_URL=http://localhost:5173
BUSINESS_WEB_URL=http://localhost:5174
